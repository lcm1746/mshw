<div id="post_content">
    <h1 class="title">
        <%= @post.subject_name %>     
        <span class="glyphicon glyphicon-hand-right"></span> 
        <%= @post.lecturer %> 교수
    </h1><br>
    
    <p class="date">
        Submitted <%= time_ago_in_words(@post.created_at) %> Ago
        <% if user_signed_in? %>
            | <%= link_to 'Edit', edit_post_path(@post) %>
            | <%= link_to 'Delete', post_path(@post), method: :delete, data: { confirm: '삭제를 하시겠습니까?' } %>
        <% end %>
    </p>
    
    <p class="body">
        <h3><%= @post.content %></h3>
    </p>
    <br>
    <p>
        <div class="star-rating" data-score= <%= @post.rating %> ></div>
    </p>
    <br>
    <span class="glyphicon glyphicon-thumbs-up"> <%= @post.get_upvotes.size %></span>
    <span class="glyphicon glyphicon-thumbs-down"> <%= @post.get_downvotes.size %></span><br>
    <span class="btn btn-default"><%= link_to "like", like_post_path(@post), method: :get %></span>
    <span class="btn btn-default"><%= link_to "dislike", dislike_post_path(@post), method: :get %></span>    
    
    <div id="comments">
        <h2><%= @post.comments.count %> Comments</h2>
        <%= render @post.comments %>
        <h3>Add a comment:</h3>
        <%= render "comments/form" %>
    </div>

</div>


<script>
    $('.star-rating').raty({
        path: '/assets/',
        readOnly: true,
        score: function() {
            return $(this).attr('data-score');
        }
    });
    
</script>